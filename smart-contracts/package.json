{
  "name": "@relay-protocol/smart-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:relayprotocol/vaults.git",
  "author": "Julien Genestoux <julien.genestoux@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn hardhat compile",
    "build:abis": "yarn hardhat export:abis",
    "test": "yarn run test:optimism && yarn run test:base && yarn run test:hardhat && yarn run test:ethereum && yarn run test:zksync",
    "test:base": "RPC_URL=https://gateway.tenderly.co/public/base yarn hardhat test test/**/*.base.ts",
    "test:hardhat": "yarn hardhat test test/**/*.hardhat.ts",
    "test:ethereum": "RPC_URL=https://mainnet.gateway.tenderly.co yarn hardhat test test/**/*.ethereum.ts",
    "test:optimism": "RPC_URL=https://gateway.tenderly.co/public/optimism yarn hardhat test test/**/*.optimism.ts",
    "test:sepolia": "RPC_URL=https://sepolia.gateway.tenderly.co yarn hardhat test test/**/*.sepolia.ts",
    "test:zksync": "ZKSYNC=1 && RPC_URL=https://mainnet.era.zksync.io yarn hardhat test test/**/*.zksync.ts",
    "lint:contracts": "solhint 'contracts/**/*.sol'",
    "lintFix": "yarn lint:contracts --fix --noPrompt && yarn lint:code --fix",
    "lint:code": "eslint .",
    "lint": "yarn lint:contracts && yarn lint:code",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "devDependencies": {
    "@eslint/js": "9.28.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.9",
    "@nomicfoundation/hardhat-ethers": "3.0.9",
    "@nomicfoundation/hardhat-ignition": "0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.12",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@relay-protocol/helpers": "workspace:*",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.20",
    "@types/fs-extra": "11.0.4",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.31",
    "@types/semver": "7",
    "chai": "4.5.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-evm-address-to-checksummed": "0.0.6",
    "eslint-plugin-json": "4.0.1",
    "eslint-plugin-mocha": "11.1.0",
    "eslint-plugin-prettier": "5.4.1",
    "ethers": "6.14.3",
    "fs-extra": "11.3.0",
    "globals": "16.2.0",
    "hardhat": "2.22.18",
    "hardhat-gas-reporter": "2.3.0",
    "husky": "9.1.7",
    "pinst": "3.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-solidity": "2.0.0",
    "solhint": "5.1.0",
    "solidity-coverage": "0.8.16",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.0"
  },
  "dependencies": {
    "@bgd-labs/aave-address-book": "4.22.2",
    "@eth-optimism/contracts-bedrock": "0.17.3",
    "@hyperlane-xyz/registry": "13.16.1",
    "@matterlabs/hardhat-zksync": "1.6.0",
    "@matterlabs/hardhat-zksync-deploy": "1.7.0",
    "@openzeppelin/contracts": "5.3.0",
    "@openzeppelin/contracts-upgradeable": "5.3.0",
    "@safe-global/api-kit": "3.0.2",
    "@safe-global/protocol-kit": "6.0.5",
    "@safe-global/types-kit": "2.0.1",
    "@uniswap/v3-periphery": "1.4.4",
    "enquirer": "2.4.1",
    "solidity-docgen": "0.6.0-beta.36",
    "solmate": "6.8.0"
  }
}
